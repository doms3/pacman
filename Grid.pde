  public void show() {
    if ( isOnGrid( pacman ) ) {
      Square isOn = checkPos( pacman.pos.x, pacman.pos.y );
      isOn.hasFood = false;
    }
    for ( int i = 0; i < squares.length; i++ ) {
      squares[i].show();
    }
  }  

  public boolean isOnGrid( Player player ) {
    return (player.pos.x - colSize / 2) % colSize == 0 && (player.pos.y - rowSize / 2) % rowSize == 0;
  }

  public void placeOnGrid( Player player ) {
    float newx = player.pos.x - colSize / 2;
    float newy = player.pos.y - rowSize / 2;

    newx = round( newx / colSize ) * colSize;
    newy = round( newy / rowSize ) * rowSize;

    newx += colSize / 2;
    newy += rowSize / 2;

    player.pos.set( newx, newy );
  }

