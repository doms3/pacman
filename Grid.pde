  public void tidyRestrictions() {
    for ( Square square : squares ) {
      square.getRestrictions();   // get which directions movement is allowed for each tile
    }

    restrictionExceptions();   // changes restrictions for the tunnel
  }

  public PVector getLocation( int row, int col ) {
    int index = row * numRows + col;
    return squares[index].pos.copy();
  }

  public Square checkPos( float x, float y ) {
    int gridCol, gridRow;
    gridCol = floor( x / colSize );
    gridRow = floor( y / rowSize );

    return squares[ gridRow * numRows + gridCol ];
  }

  private void restrictionExceptions() {
  int index1 = 9 * numRows;
  int index2 = 9 * numRows + 20;
  int index3 = 7 * numRows + 10;
  int index4 = 9 * numRows + 10;
  
  squares[index1].restrictions.remove( Direction.LEFT );
  squares[index2].restrictions.remove( Direction.RIGHT );
  squares[index3].restrictions.add( Direction.DOWN );
  squares[index3 + numRows].colour = color( 119, 136, 238 );
  squares[index4].restrictions.add( Direction.LEFT );  
  squares[index4].restrictions.add( Direction.RIGHT );
  }
